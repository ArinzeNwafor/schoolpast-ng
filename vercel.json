{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { 
      "src": "/api/waitlist",
      "methods": ["GET", "POST"],
      "dest": "/api/waitlist.js"
    },
    { 
      "src": "/admin.html",
      "dest": "/admin.html"
    },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "ADMIN_API_KEY": "@admin_api_key"
  }
} 